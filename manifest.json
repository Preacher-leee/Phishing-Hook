{
  "manifest_version": 3,
  "name": "Phishing Hook",
  "description": "Upload and analyze .eml files to detect phishing emails with digital detective insights.",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
